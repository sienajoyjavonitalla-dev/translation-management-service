<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>PSR-12 coding standard for Translation Management Service</description>

    <!-- Include the whole project -->
    <file>app</file>
    <file>tests</file>
    <file>routes</file>
    <file>database</file>

    <!-- Exclude vendor and cache directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>

    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Show colors -->
    <arg name="colors"/>
    
    <!-- Show warnings -->
    <arg value="w"/>
</ruleset>
